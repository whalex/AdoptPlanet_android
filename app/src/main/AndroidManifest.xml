<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adoptplanet.com.adoptplanet" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.StartingScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".view.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name=".view.RegistrationFollowActivity"
            android:label="@string/title_activity_registration_follow" >
        </activity>
        <activity
            android:name=".view.MainFeedActivity"
            android:label="@string/title_activity_main_feed" >
        </activity>
        <activity
            android:name=".view.PetTabActivity"
            android:label="@string/title_activity_pet_tab" >
        </activity>
        <activity
            android:name=".view.EventTabActivity"
            android:label="@string/title_activity_event_tab" >
        </activity>
        <activity
            android:name=".view.SearchPetActivity"
            android:label="@string/title_activity_search_pet" >
        </activity>
    </application>

</manifest>
