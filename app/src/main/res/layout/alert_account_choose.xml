<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="450dp"
              android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Your Account Type"
        android:id="@+id/rxxx"
        android:textColor="@color/black_t"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/user_lay"
            android:gravity="bottom|center_horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/user_iv"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/z_user_acc_active"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="User account"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_d"
                android:id="@+id/user_tv"
                android:textSize="17sp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/shelter_lay"
            android:orientation="vertical"
            android:gravity="bottom|center_horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/shelter_iv"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/z_shelter_acc"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Shelter account"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/shelter_tv"
                android:textColor="@color/gray"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text for pet account..."
        android:id="@+id/choose_type_text"
        android:textIsSelectable="false"
        android:textColor="@color/black_t"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/next"
        android:id="@+id/choose_type_accept"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/orange"/>
</LinearLayout>